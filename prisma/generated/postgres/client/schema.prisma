generator client {
  provider        = "prisma-client-js"
  output          = "../../generated/postgres/client"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

generator zod {
  provider = "pnpm exec zod-prisma-types"
  output   = "../../generated/postgres/zod"
}

model DirectoryField {
  id           String             @id @default(cuid())
  name         String
  type         DirectoryFieldType
  required     Boolean            @default(false)
  multiple     Boolean            @default(false)
  order        Int
  show_in_list Boolean            @default(true)
  directory    Directory          @relation(fields: [directory_id], references: [id])
  directory_id String
}

enum DirectoryFieldType {
  integer
  float
  string
  date
  datetime
  time
}

model Directory {
  id          String           @id @default(cuid())
  name        String
  description String?
  fields      DirectoryField[]
}
